{
  "compilerOptions": {
    "target": "ES2020",                          
    "module": "CommonJS",                    
    "lib": ["ES2016", "ES2016.Array.Include", "ES2017.String", "ES2020.String", "ESNext.String"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true
  }
}